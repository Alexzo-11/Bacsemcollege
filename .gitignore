  /* Slideshow */
.slideshow-container {
    position: relative;
    max-width: 100%;
    height: 400px;
    overflow: hidden;
    border-radius: 10px;
  }
  
  .slide {
    display: none;
    width: 100%;
    height: 100%;
  }
  
  .slide img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 10px;
  }
  
  .fade {
    animation: fadeEffect 1s ease-in-out;
  }
  
  @keyframes fadeEffect {
    from {opacity: 0.4}
    to {opacity: 1}
  }
  
